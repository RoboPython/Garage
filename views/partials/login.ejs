<!DOCTYPE html>
<div class="container-fluid" style="width:100%">
	<div ng-controller="invoiceCtrl">
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<form>
					<div class="row">
						<div class="col-md-4 col-md-offset-4">
							<input type="text" placeholder="Username" ng-model="user.username" class="form-control">
						</div>
					</div>
					<br>
					<div class="row">
						<div class="col-md-4 col-md-offset-4">
							<input type="password" placeholder="Password" ng-model="user.password" class="form-control">
						</div>
					</div>
					<br>
					<div class="row">
						<div class="col-md-4 col-md-offset-4">
							<button  type="button" ng-click="login(user)" class="btn btn-default">Login</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
